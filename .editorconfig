# EditorConfig - конфигурация для обеспечения единообразного стиля кода
# Этот файл помогает разработчикам в разных редакторах соблюдать одинаковые правила форматирования
# Подробнее: https://editorconfig.org

# Указывает, что это корневой файл EditorConfig
# Поиск конфигурации останавливается на этом уровне
root = true

# Правила для всех файлов
[*]
# Кодировка файлов - UTF-8 (поддержка кириллицы и других языков)
charset = utf-8

# Символ конца строки - LF (Unix-стиль, \n)
# Обеспечивает единообразие на разных операционных системах
end_of_line = lf

# Добавлять пустую строку в конец файла
# Это стандарт POSIX и улучшает совместимость с Git
insert_final_newline = true

# Удалять пробелы в конце строк
# Предотвращает ненужные изменения в системе контроля версий
trim_trailing_whitespace = true

# Правила для PHP-файлов
[*.php]
# Использовать пробелы для отступов (не табы)
indent_style = space

# Размер отступа - 4 пробела
# Стандарт PSR-12 для PHP
indent_size = 4

# Правила для JSON-файлов
[*.json]
# Использовать пробелы для отступов
indent_style = space

# Размер отступа - 4 пробела
# Обеспечивает читаемость JSON-конфигураций
indent_size = 4

# Правила для Markdown-файлов
[*.md]
# НЕ удалять пробелы в конце строк
# В Markdown два пробела в конце строки означают перенос
trim_trailing_whitespace = false
